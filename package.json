{
  "name": "ooniprobe-desktop",
  "description": "OONI Probe Desktop app",
  "author": "Open Observatory of Network Interference (OONI) <contact@openobservatory.org>",
  "productName": "OONI Probe",
  "version": "3.0.4-dev",
  "probeVersion": "3.0.4",
  "main": "main/index.js",
  "license": "MIT",
  "repository": "ooni/probe-desktop",
  "scripts": {
    "start": "electron -r @babel/register .",
    "dev": "yarn run start",
    "build": "next build renderer && next export renderer && yarn run probe-cli",
    "dist": "yarn run build && electron-builder --dir -mw",
    "pack": "yarn run build && electron-builder --win --mac --linux",
    "pack:win": "yarn run build && electron-builder --win --x64",
    "pack:mac": "yarn run build && electron-builder --mac",
    "pack:linux": "yarn run build && electron-builder --linux",
    "probe-cli": "node scripts/download-bin.js",
    "publish": "yarn run build && electron-builder --mac --win -p always",
    "publish:mac": "yarn run build && electron-builder --mac -p always",
    "publish:win": "yarn run build && electron-builder --win -p always",
    "icon-gen": "icon-gen -i static/Icon-Color.svg -o main/static/icons -r -m ico,icns",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "postinstall": "electron-builder install-app-deps",
    "storybook": "start-storybook -p 6006"
  },
  "build": {
    "appId": "org.ooni.probe-desktop",
    "productName": "OONI Probe",
    "asar": true,
    "files": [
      "**/*",
      "!bin",
      "!renderer",
      "renderer/out"
    ],
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Network",
      "extraFiles": [
        {
          "from": "./build/probe-cli/linux_amd64/ooniprobe",
          "to": "./resources/bin/ooniprobe"
        }
      ]
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ],
      "icon": "main/static/icons/app.ico",
      "extraFiles": [
        {
          "from": "./build/probe-cli/windows_amd64/ooniprobe.exe",
          "to": "./resources/bin/ooniprobe.exe"
        }
      ]
    },
    "dmg": {
      "background": "build/background.tiff",
      "sign": false,
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "mac": {
      "publish": [
        "github"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "entitlementsInherit": "./build/entitlements.mac.inherit.plist",
      "category": "public.app-category.tools",
      "icon": "main/static/icons/app.icns",
      "extraFiles": [
        {
          "from": "./build/probe-cli/darwin_amd64/ooniprobe",
          "to": "./Resources/bin/ooniprobe"
        }
      ]
    },
    "afterSign": "scripts/notarize.js"
  },
  "devDependencies": {
    "@babel/cli": "7.6.0",
    "@babel/core": "7.6.0",
    "@babel/register": "7.6.0",
    "@storybook/addon-actions": "5.2.1",
    "@storybook/addon-links": "5.2.1",
    "@storybook/addon-storysource": "5.2.1",
    "@storybook/addons": "5.2.1",
    "@storybook/react": "5.2.1",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-source-maps": "^0.0.3",
    "aws-sdk": "^2.529.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-react-svg": "1.1.0",
    "babel-plugin-react-intl": "^2.4.0",
    "babel-plugin-styled-components": "1.10.6",
    "chroma-js": "^2.0.6",
    "cross-env": "^7.0.2",
    "csv-parse": "^4.4.6",
    "electron": "^8.2.1",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-notarize": "0.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.14.3",
    "humanize": "^0.0.9",
    "icon-gen": "^2.0.0",
    "jest": "^25.3.0",
    "moment": "^2.24.0",
    "moment-range": "^4.0.2",
    "next": "9.3.2",
    "next-progressbar": "^1.0.0",
    "ooni-components": "0.3.2",
    "prop-types": "15.7.2",
    "raven-js": "^3.27.2",
    "rc-progress": "^2.5.2",
    "react": "^16.12.0",
    "react-animations": "^0.1.0",
    "react-dom": "^16.12.0",
    "react-icons": "3.7.0",
    "react-intl": "3.3.2",
    "react-lottie": "^1.2.3",
    "remark": "^11.0.1",
    "remark-react": "^6.0.0",
    "spectron": "^10.0.1",
    "styled-components": "^4.4.1",
    "webpack": "4.40.2"
  },
  "dependencies": {
    "@datapunt/matomo-tracker-react": "^0.1.1",
    "@sentry/browser": "^5.12.1",
    "@sentry/electron": "^1.2.0",
    "@sentry/node": "^5.12.1",
    "@zeit/next-css": "^1.0.1",
    "app-root-path": "2.2.1",
    "debug": "^4.1.1",
    "debug-to-file": "^1.0.9",
    "electron-debug": "^3.0.1",
    "electron-is-dev": "1.1.0",
    "electron-log": "^3.0.7",
    "electron-next": "3.1.5",
    "electron-unhandled": "^3.0.0",
    "electron-updater": "^4.3.1",
    "electron-util": "^0.12.1",
    "first-run": "^1.2.0",
    "fix-path": "^2.1.0",
    "fs-extra": "^8.1.0",
    "fstream": "^1.0.12",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "ms": "^2.1.2",
    "os-locale": "^5.0.0",
    "react-json-view": "1.19.1",
    "react-spring": "^8.0.27",
    "react-sticky": "^6.0.3",
    "react-table": "^7.0.0-rc.15",
    "split2": "^2.2.0",
    "sudo-prompt": "^7.1.1",
    "svgo": "^1.3.0",
    "use-clipboard-copy": "^0.1.2",
    "webpack-bundle-analyzer": "^3.5.0"
  },
  "optionalDependencies": {
    "fsevents": "1.2.9"
  },
  "resolutions": {
    "js-yaml": "3.13.1",
    "lodash": "^4.17.15",
    "rebass": "2.3.3",
    "lottie-web": "5.6.6",
    "serialize-javascript": "^2.1.1",
    "set-value": "^2.0.1",
    "styled-components": "^4.4.1",
    "styled-system": "3.1.6"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/test/**/*.e2e.js"
    ],
    "setupFiles": [
      "<rootDir>/test/lib/setup.js"
    ],
    "testSequencer": "<rootDir>/test/lib/sequencer.js"
  }
}
